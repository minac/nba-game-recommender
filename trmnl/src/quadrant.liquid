<div class="view view--quadrant">
  <div class="layout layout--column">

    {% if game %}

      <!-- Matchup Info -->
      <div class="matchup-line">
        {{ game.away_team.abbr }} vs {{ game.home_team.abbr }} @ {{ game.game_date }}
      </div>

      <!-- Footer -->
      <div class="footer">
        <p>{{ updated_at | default: "recently" }}</p>
      </div>

    {% else %}

      <!-- Empty State -->
      <div class="empty-compact">
        <div class="empty-icon">üèÄ</div>
        <div class="empty-msg">No Games</div>
      </div>

    {% endif %}

  </div>
</div>

<style>
  .view--quadrant {
    padding: 8px;
    height: 100%;
    font-size: 0.8rem;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  .matchup-line {
    text-align: center;
    font-size: 0.75rem;
    font-weight: 600;
    margin-bottom: 0.5rem;
    line-height: 1.3;
  }

  .empty-compact {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    height: 100%;
  }

  .empty-icon {
    font-size: 2rem;
    margin-bottom: 0.3rem;
  }

  .empty-msg {
    font-size: 0.8rem;
    font-weight: 600;
    opacity: 0.6;
  }

  .footer {
    margin-top: auto;
    padding-top: 0.4rem;
    border-top: 1px solid #ddd;
    text-align: center;
    font-size: 0.6rem;
    opacity: 0.6;
  }

  .footer p {
    margin: 0;
  }
</style>
